---
import Layout from "../layouts/Layout.astro";
import Menu from "../components/Menu.astro";
import Footer from "../components/Footer.astro";
import Home from "../components/Home.astro";
---

<Layout title="Rocío Marivel Díaz Zavala">
  <section class="layout">
    <div class="header">
      <Menu />
    </div>
    <div class="leftSide"></div>
    <div class="body">
      <Home />
    </div>
    <div class="rightSide"></div>
    <div class="footer">
      <Footer />
    </div>
  </section>
</Layout>

<style>
  .layout {
    width: 100%;
    height: 100vh;

    display: grid;
    grid:
      "leftSide header rightSide" 60px
      "leftSide body rightSide" 1fr
      "leftSide footer rightSide" 50px
      / 50px 1fr 50px;
  }

  .header {
    grid-area: header;
  }
  .leftSide {
    grid-area: leftSide;
  }
  .body {
    grid-area: body;
    background-color: #f5c9c6;
    overflow: auto;
    padding: 1rem;
  }
  .rightSide {
    grid-area: rightSide;
  }
  .footer {
    grid-area: footer;
  }

  @media (max-width: 640px) {
    .layout {
      width: 100%;
      height: 100vh;

      display: grid;
      grid:
        "header header header" 60px
        "body body body" 1fr
        "footer footer footer" 50px
        / 50px 1fr 50px;
    }
  }
</style>
