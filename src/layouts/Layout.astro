---
import { ViewTransitions } from "astro:transitions";
import Menu from "../components/Menu.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <!-- /Bootstrap Icons -->
    <ViewTransitions />
  </head>
  <body>
    <div class="layout">
      <header class="header">
        <Menu />
      </header>
      <div class="leftSide"></div>
      <main class="body bg-gray-100">
        <div class="flex h-full">
          <img src="/image/profile.jpg" alt="" class="w-1/4 hidden xl:block" />
          <div
            class="w-full pt-10 px-5 md:px-10 overflow-auto"
            transition:animate="slide"
          >
            <slot />
          </div>
        </div>
      </main>
      <div class="rightSide"></div>
      <footer class="footer">
        <Footer />
      </footer>
    </div>
    <div class="trail hidden"></div>
    <script>
      document.addEventListener("mousemove", function (event) {
        const trail = document.createElement("div");
        trail.className = "trail";
        document.body.appendChild(trail);
        trail.style.left = event.pageX - 5 + "px";
        trail.style.top = event.pageY - 5 + "px";
        setTimeout(() => {
          trail.remove();
        }, 1000);
      });
    </script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.0.0/flowbite.min.js"
    ></script>

    <style is:global>
      :root {
      }

      html {
        font-family: system-ui, sans-serif;
        /* color-scheme: light; */
      }

      body {
        padding: 0;
        margin: 0;
        overflow: hidden;
      }
      .layout {
        width: 100%;
        height: 100vh;

        display: grid;
        grid:
          "leftSide header rightSide" 70px
          "leftSide body rightSide" 1fr
          "leftSide footer rightSide" 70px
          / 70px 1fr 70px;
      }

      .header {
        grid-area: header;
      }
      .leftSide {
        grid-area: leftSide;
      }
      .body {
        grid-area: body;
        overflow: auto;
        /* background-color: #f0dfdc; */
        /* background-color: #f6fbff; */
      }

      .rightSide {
        grid-area: rightSide;
      }
      .footer {
        grid-area: footer;
      }

      @media (max-width: 640px) {
        .layout {
          width: 100%;
          height: 100vh;

          display: grid;
          grid:
            "header header header" 70px
            "body body body" 1fr
            "footer footer footer" 70px
            / 50px 1fr 50px;
        }
      }

      .trail {
        position: absolute;
        width: 10px;
        height: 10px;
        background-color: #fecaca;
        pointer-events: none;
        transform-origin: center;
        animation: trail 0.5s ease-out;
        opacity: 0;
      }

      @keyframes trail {
        0% {
          transform: scale(1);
          opacity: 1;
        }
        100% {
          transform: scale(0);
          opacity: 0;
        }
      }
    </style>
  </body>
</html>
