---
interface Props {
  description: string;
  type: string;
  givenBy: string;
  date: string;
}

const { description, type, givenBy, date } = Astro.props;
---

<div
  class="flex flex-col flex-shrink-0 relative overflow-hidden bg-gradient-to-r from-purple-700 via-purple-800 to-purple-900 rounded-lg border-2 border-purple-500 hover:border-fuchsia-500 hover:-translate-y-2 transition-transform duration-700 min-h-[250px]"
>
  <div class="flex flex-grow items-center justify-center py-5 px-7">
    <p class="text-white text-sm">
      {description}
    </p>
  </div>
  <div class="text-white pb-5 px-5">
    <span class="block opacity-75 -mb-1 text-base">{givenBy}</span>
    <div class="flex justify-between">
      <span class="block font-semibold text-lg">{type}</span>
      <span
        class="bg-white rounded-full text-purple-500 text-xs font-bold px-3 py-2 leading-none flex items-center"
        >{date}</span
      >
    </div>
  </div>
</div>
