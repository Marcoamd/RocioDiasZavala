---
interface Props {
  description?: Array<string>;
  date?: string;
  type?: string;
  subtitle: string;
  link?: string;
}

const { description, date, type, subtitle, link } = Astro.props;

title: "Rocío Marivel Díaz Zavala";
date: "2023-11-05";
author: "Rocío Marivel Díaz Zavala";
---

<div
  class="bg-white flex flex-col overflow-hidden shadow-md rounded-lg hover:-translate-y-2 transition-transform duration-700 min-h-[250px]"
>
  <div class="h-1 bg-purple-500"></div>
  <div class="p-5 flex items-center flex-grow">
    <article>
      {description.map((paragraph) => <p class="text-sm mb-1">{paragraph}</p>)}
    </article>
  </div>
  <div class="pb-5 px-5">
    <span class="block opacity-75 -mb-1 text-sm">{subtitle}</span>
    <div class="flex justify-between">
      <span class="block font-bold text-lg"
        >{type}
        <a
          class:list={[{ hidden: !link }]}
          href={link ? link : "#"}
          target={link ? "_blank" : ""}
          class="ml-2 text-purple-800"><i class="bi bi-link-45deg"></i></a
        ></span
      >
      <span
        class:list={[{ hidden: !date }]}
        class="bg-purple-800 rounded-full text-white text-xs font-bold px-3 py-2 leading-none flex items-center"
        >{date}</span
      >
    </div>
  </div>
</div>
